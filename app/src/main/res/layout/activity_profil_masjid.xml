<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ProfilMasjidActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profilmasjid_foto"
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fotomasjid"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/profilmasjid_namamasjid"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Nama Masjid"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_below="@id/profilmasjid_foto"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/profilmasjid_btnnavigasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/navigasi"
            android:layout_below="@id/profilmasjid_foto"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/profilmasjid_namamasjid"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/profilmasjid_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilmasjid_namamasjid"
            android:text="Deskripsi : "
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/profilmasjid_txtdeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilmasjid_deskripsi"
            android:layout_marginLeft="30dp"
            android:text="blablabla"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/profilmasjid_fasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilmasjid_txtdeskripsi"
            android:text="Fasilitas : "
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/profilmasjid_txtfasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilmasjid_fasilitas"
            android:layout_marginLeft="30dp"
            android:text="blablablaabfjkbajkwbja"
            android:textSize="14sp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/profilmasjid_btnselengkapnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnselengkapnya"
            android:layout_below="@id/profilmasjid_txtfasilitas"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="280dp"
            android:layout_marginBottom="50dp"/>










    </RelativeLayout>

</ScrollView>